# Contributor: Steve Holmes <steve.holmes88@gmail.com>
# Contributor: William Rea <sillywilly@gmail.com>
# Contributor: Chrys

pkgname=orca-plugin-based-git
pkgver=44.0.r93.gcc26a1f6b
pkgrel=1
pkgdesc="Screen reader for individuals who are blind or visually impaired (development version) - Plugin Based Version"
arch=('any')
license=('LGPL')
url="https://wiki.gnome.org/Projects/Orca"

depends=(
	at-spi2-core
	brltty
	gsettings-desktop-schemas
	gst-plugins-base # playbin, audiotestsrc, basic decoders
	gst-plugins-good # pulsesink, more decoders
	gtk3
	liblouis
	libwnck3
	python-atspi
	python-setproctitle
	speech-dispatcher
	xorg-xkbcomp
	xorg-xmodmap
	libpeas
)
makedepends=(
	git
	itstool
	yelp-tools
)
groups=('gnome')
provides=('orca')
conflicts=('orca')
source=(${pkgname%-git}::'git+https://github.com/chrys87/orca-plugin.git')
md5sums=('SKIP')

prepare() {
	cd "${pkgname%-git}"
	git checkout plugin_system_old_keyboard
	NOCONFIGURE=1 ./autogen.sh
}

build() {
	cd "${pkgname%-git}"
	./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
	make
}

package() {
	cd "${pkgname%-git}"
	make DESTDIR="${pkgdir}" install
}
